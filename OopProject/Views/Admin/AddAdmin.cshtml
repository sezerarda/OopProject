@model EntityLayer.Concrete.Admin

@{
    ViewData["Title"] = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Admin Girişi</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Kullanıcı Adı</label>
                    @Html.TextBoxFor(p => p.Username, new { @class = "form-control" } )
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Şifre</label>
                    @Html.TextBoxFor(p => p.Password, new { @class = "form-control" } )
                </div>
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>