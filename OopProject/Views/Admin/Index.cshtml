@using EntityLayer.Concrete
@model List<Admin>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Admin Sayfası</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Password</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.AdminId </td>
                                <td> @item.Username </td>
                                <td> @item.Password</td>
                                <td> <a href="/Admin/DeleteAdmin/@item.AdminId" class="btn btn-danger">Sil</a></td>
                                <td> <a href="/Admin/EditAdmin/@item.AdminId" class="btn btn-warning">Güncelle</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
                <a href="/Admin/AddAdmin" class="btn btn-outline-primary">Yeni Admin Ekle</a>

            </div>
        </div>
    </div>
    </div>
