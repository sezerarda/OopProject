@model EntityLayer.Concrete.Image

@{
    ViewData["Title"] = "AddImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>AddImage</h1>


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Image</h4>
            <form class="forms-sample" method="post">
               
                <div class="form-group">
                    <label for="exampleInputEmail3">Title</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    @Html.TextBoxFor(p => p.Title, new { @class = "form-control" })

                </div>
                 <div class="form-group">
                    <label for="exampleTextarea1">Image Yolu</label>
                    @Html.TextBoxFor(p => p.ImageUrl, new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    @Html.TextAreaFor(p => p.Description, new { @class = "form-control" })

                </div>
             
                
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>
