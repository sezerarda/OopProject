@model EntityLayer.Concrete.News
@{
    ViewData["Title"] = "EditNews";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>EditNews</h1>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Duyuru Güncelle</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(p => p.NewsId)
                
                <div class="form-group">
                    <label for="exampleInputEmail3">Title</label>
                    @*<span asp-validation-for="Title" class="text-danger"></span>*@
                    @*@Html.TextBoxFor(p => p.Title, new { @class = "form-control" })*@
                    <input type="text" class="form-control" placeholder="Title Giriniz" asp-for="Title" />

                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    @*@Html.TextAreaFor(p => p.Description, new { @class = "form-control" })*@
                    <textarea cols="30" rows="5" class="form-control" placeholder="Açıklama Giriniz" asp-for="Description"></textarea>

                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Tarih</label>
                    @*@Html.TextAreaFor(p => p.Date, new { @class = "form-control" })*@
                    <input type="date" class="form-control" placeholder="tarih seçiniz" asp-for="Date" />

                </div>
               
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>