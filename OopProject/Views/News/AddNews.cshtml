@model EntityLayer.Concrete.News

@{
    ViewData["Title"] = "AddNews";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Ekleme Sayfası</h4>    
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    @Html.TextBoxFor(p => p.Title, new { @class = "form-control" } )
                </div>
               
                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    @Html.TextAreaFor(p => p.Description, 5, 30, new { @class = "form-control"})
                </div>
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>

