@using EntityLayer.Concrete
@model List<News>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular Listesi</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                            <th>Aktif Yap</th>
                            <th>Pasif Yap</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.NewsId </td>
                                <td> @item.Title </td>
                                <td> @item.Date </td>
                                <td> <a href="/News/DeleteNews/@item.NewsId" class="btn btn-danger">Sil</a></td>
                                <td> <a href="/News/EditNews/@item.NewsId" class="btn btn-warning">Güncelle</a></td>
                                <td> <a href="/News/ChangeStatusTrue/@item.NewsId" class="btn btn-success">Aktif Yap</a></td>
                                <td> <a href="/News/ChangeStatusFalse/@item.NewsId" class="btn btn-secondary">Pasif Yap</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
                <a href="/News/AddNews" class="btn btn-outline-primary">Duyuru Ekle</a>

            </div>
        </div>
    </div>

