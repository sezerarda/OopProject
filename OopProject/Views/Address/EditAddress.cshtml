@model EntityLayer.Concrete.Address

@{
    ViewData["Title"] = "EditAddress";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>EditAddress</h1>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Adres Güncelle</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(p => p.AddressId)
                <div class="form-group">
                    <label for="exampleInputName1">Açıklama 1</label>
                    <span asp-validation-for="Description1" class="text-danger"></span>
                    @Html.TextBoxFor(p => p.Description1 , new { @class = "form-control" } )
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Description2</label>
                    <span asp-validation-for="Description2" class="text-danger"></span>
                    @Html.TextBoxFor(p => p.Description2, new { @class = "form-control" })

                </div>
                 <div class="form-group">
                    <label for="exampleInputEmail3">Description3</label>
                    <span asp-validation-for="Description3" class="text-danger"></span>
                    @Html.TextBoxFor(p => p.Description3, new { @class = "form-control" })

                </div>
                 <div class="form-group">
                    <label for="exampleInputEmail3">Description4</label>
                    <span asp-validation-for="Description4" class="text-danger"></span>
                    @Html.TextBoxFor(p => p.Description4, new { @class = "form-control" })

                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">MapInfo</label>
                    <span asp-validation-for="MapInfo" class="text-danger"></span>
                    @Html.TextBoxFor(p => p.MapInfo, new { @class = "form-control" })

                </div>
           
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>