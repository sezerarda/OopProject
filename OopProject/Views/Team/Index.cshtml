@using EntityLayer.Concrete
@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takım Listesi</h4>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>ID</th>
                            <th>Ad</th>
                            <th>Görev</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/images/faces/face1.jpg" alt="image" />
                                </td>
                                <td>
                                    @item.TeamId
                                </td>
                                <td>
                                    @item.PersonName
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    <a href="/Team/DeleteTeam/@item.TeamId" class="btn btn-danger">Sil</a>
                                </td>
                                <td>
                                    <a href="/Team/EditTeam/@item.TeamId" class="btn btn-success">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Team/AddTeam" class="btn btn-outline-primary">Yeni Personel Ekle</a>
            </div>
        </div>
    </div>
</div>
