@model OopProject.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Profil Güncelle</h4>
            <form class="forms-sample" method="post">

                <div class="form-group">
                    <label >Mail Adresi</label>
                    @*<span asp-validation-for="Title" class="text-danger"></span>*@
                    @*@Html.TextBoxFor(p => p.Title, new { @class = "form-control" })*@
                    <input type="text" class="form-control" placeholder="Mail Giriniz" asp-for="Mail" />

                </div>
                <div class="form-group">
                    <label >Telefon</label>
                    @*@Html.TextAreaFor(p => p.Description, new { @class = "form-control" })*@
                    <input type="text" class="form-control" placeholder="Telefon Giriniz" asp-for="Phone" />


                </div>
                <div class="form-group">
                    <label>Şifre</label>
                    @*@Html.TextAreaFor(p => p.Description, new { @class = "form-control" })*@
                    <input type="text" class="form-control" placeholder="Şifre Giriniz" asp-for="Password" />


                </div>
                <div class="form-group">
                    <label>Şifre Onay</label>
                    @*@Html.TextAreaFor(p => p.Description, new { @class = "form-control" })*@
                    <input type="text" class="form-control" placeholder="Şifre Giriniz" asp-for="ConfirmPassword" />


                </div>

                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>
