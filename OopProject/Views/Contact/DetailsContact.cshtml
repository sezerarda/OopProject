@model EntityLayer.Concrete.Contact

@{
    ViewData["Title"] = "DetailsContact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Details Contact </h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(p => p.ContactId)
                <div class="form-group">
                    <label for="exampleInputName1">İsim</label>
                    @Html.TextBoxFor(p => p.Name , new { @class = "form-control" } )
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail</label>
                    @Html.TextBoxFor(p => p.Mail, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Tarih</label>
                    @Html.TextBoxFor(p => p.Date, new { @class = "form-control" })
                </div>
                 <div class="form-group">
                    <label for="exampleTextarea1">Mesaj Detayı</label>
                    @Html.TextAreaFor(p => p.Message, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>

