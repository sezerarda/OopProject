@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Service Listesi</h4>
           
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.ServiceId </td>
                                <td> @item.Title </td>
                                <td> @item.Description </td>
                                <td> @item.Image </td>
                                <td> <a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger">Sil</a> </td>
                                <td> <a href="/Service/EditService/@item.ServiceId" class="btn btn-warning">Güncelle</a> </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <a href="/Service/AddService" class="btn btn-outline-primary">Hizmet Ekle</a>

            </div>
        </div>
    </div>
</div>
