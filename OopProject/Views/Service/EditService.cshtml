@model EntityLayer.Concrete.Service

@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Service</h4>    
            <form class="forms-sample" method="post">
                @Html.HiddenFor(p =>p.ServiceId)
                <div class="form-group">
                    @Html.Label("Başlık")
                    @Html.TextBoxFor(p => p.Title, new { @class = "form-control" } )
                </div>
                <div class="form-group">
                    @Html.Label("Görsel")
                    @Html.TextBoxFor(p => p.Image, new { @class = "form-control" } )

                </div>
                <div class="form-group">
                    @Html.Label("Açıklama")
                    @Html.TextBoxFor(p => p.Description, new { @class = "form-control" } )

                </div>
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>